{
  "compilerOptions": {
    "target": "es2016" ,
    "module": "commonjs" ,
    "rootDir": "." ,
    "outDir": "./dist",
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
